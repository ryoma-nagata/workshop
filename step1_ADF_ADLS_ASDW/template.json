{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
        "location": {
            "type": "String",
            "defaultValue": "japaneast"
        },
        "NamePrefix":{
            "type":"string"
        },
        "ADLS_Suffix":{
            "type": "String",
            "defaultValue":"adls"
        },
        "ADF_Suffix":{
            "type": "String",
            "defaultValue":"adf"
        },
        "SQLServer_Suffix":{
            "type": "String",
            "defaultValue":"sql"
        },
        "ASDW_Suffix":{
            "type": "String",
            "defaultValue":"sqldw"
        },
        "administratorLogin": {
            "type": "String"
        },
        "administratorLoginPassword": {
            "type": "SecureString"
        },
        "collation": {
            "type": "String",
            "defaultValue":"Japanese_XJIS_100_CI_AS"

        }
    },
    "resources":[
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[concat(parameters('NamePrefix'),parameters('ADLS_Suffix'))]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {},
            "sku": {
                "name": "Standard_RAGRS"
            },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true,
                "isHnsEnabled": true
            }
        },
        {
            "type": "Microsoft.DataFactory/factories",
            "apiVersion": "2018-06-01",
            "name": "[concat(parameters('NamePrefix'),'-',parameters('ADF_Suffix'))]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {}    
        },
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2014-04-01-preview",
            "name": "[concat(parameters('NamePrefix'),'-',parameters('SQLServer_Suffix'))]",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "administratorLogin": "[parameters('administratorLogin')]",
                "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "type": "databases",
                    "apiVersion": "2017-10-01-preview",
            "name": "[concat(parameters('NamePrefix'),'-',parameters('ASDW_Suffix'))]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/',concat(parameters('NamePrefix'),'-',parameters('SQLServer_Suffix')))]"
                    ],
                    "tags": {},
                    "sku": {
                        "name": "DW100c",
                        "tier": "DataWarehouse"
                    },
                    "properties": {
                        "collation": "[parameters('collation')]"
                    }
                },
                {
                    "type": "firewallrules",
                    "apiVersion": "2014-04-01-preview",
                    "name": "AllowAllWindowsAzureIps",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/',concat(parameters('NamePrefix'),'-',parameters('SQLServer_Suffix')))]"
                    ],
                    "properties": {
                        "endIpAddress": "0.0.0.0",
                        "startIpAddress": "0.0.0.0"
                    },
                    "condition": true                }
            ]
        }
    ]
}