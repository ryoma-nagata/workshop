{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
        "location": {
            "type": "String",
            "defaultValue": "japaneast"
        },
        "locationName": {
            "type": "String",
            "defaultValue": "Japan East"
        },
        "NamePrefix":{
            "type":"string"
        },
        "IoT_Suffix":{
            "type": "String",
            "defaultValue":"iot"
        },
        "ASA_Suffix":{
            "type": "String",
            "defaultValue":"asa"
        },
        "Cosmos_Suffix":{
            "type": "String",
            "defaultValue":"cosmos"
        }
    },
    "resources":[
        {
            "apiVersion": "2019-07-01-preview",
            "type": "Microsoft.Devices/IotHubs",
            "name": "[concat(parameters('NamePrefix'),'-',parameters('IoT_Suffix'))]",
            "location": "[parameters('location')]",
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 4
                    }
                },
                "features": "None"
            },
            "sku": {
                "name": "S1",
                "capacity": 1
            }
        },
        {
            "type": "Microsoft.StreamAnalytics/streamingjobs",
            "apiVersion": "2017-04-01-preview",
            "name": "[concat(parameters('NamePrefix'),'-',parameters('ASA_Suffix'))]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "standard"
                },
                "outputErrorPolicy": "stop",
                "eventsOutOfOrderPolicy": "adjust",
                "eventsOutOfOrderMaxDelayInSeconds": 0,
                "eventsLateArrivalMaxDelayInSeconds": 5,
                "dataLocale": "en-US",
                "jobType": "Cloud",
                "inputs": [],
                "transformation": {
                    "name": "Transformation",
                    "properties": {
                        "query": "SELECT\r\n    *\r\nINTO\r\n    [YourOutputAlias]\r\nFROM\r\n    [YourInputAlias]",
                        "streamingUnits": 1
                    }
                },
                "compatibilityLevel": "1.1"
            }
        },
        {
            "apiVersion": "2019-12-12",
            "kind": "GlobalDocumentDB",
            "type": "Microsoft.DocumentDb/databaseAccounts",
            "name": "[concat(parameters('NamePrefix'),'-',parameters('Cosmos_Suffix'))]",
            "location": "[parameters('location')]",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "id": "[concat(parameters('NamePrefix'),'-',parameters('Cosmos_Suffix'), '-', parameters('location'))]",
                        "failoverPriority": 0,
                        "locationName": "[parameters('locationName')]"
                    }
                ],
                "enableMultipleWriteLocations": false,
                "isVirtualNetworkFilterEnabled": false,
                "virtualNetworkRules": [],
                "ipRangeFilter": "",
                "dependsOn": [],
                "capabilities": []
            },
            "tags": {
                "defaultExperience":"Core (SQL)",
                "hidden-cosmos-mmspecial": ""
            }
        }
    ]
}
